@model List<Person>

@{
    ViewData["Title"] = "Privacy Policy";
    var currentYear = DateTime.Now.Year;
    var dayOfWeek = DateTime.Now.DayOfWeek;
    var counter = 1;
}
<h1>@ViewData["Title"]</h1>

<p>Use this page to detail your site's privacy privacy.</p>

<p>Aktualnie mamy: @currentYear</p>

@if(dayOfWeek == DayOfWeek.Saturday || dayOfWeek == DayOfWeek.Sunday)
{
    <p>Mamy weekend!</p>
}
else
{
    <p>Mamy dzień tygodnia :(</p>
}

@foreach(var person in Model)
{
    <p>@counter. @person.FirstName @person.LastName</p>
    counter++;
}